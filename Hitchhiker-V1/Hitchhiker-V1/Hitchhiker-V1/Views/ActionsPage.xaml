<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hitchhiker_V1.Views.ActionsPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Hitchhiker_V1.ViewModels"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Name="BrowseItemsPage">

    <StackLayout>
        <Label Text="Choose how long you want to share your location ad destination:" />
        <Button Text="Show me as hitchhiker on map." Clicked="ShowMeClicked"/>
        <Button Text="Store key-value pair into preferences." Clicked="StoreToPreferences"/>
        <Entry x:Name="setKey" Text="" Placeholder="setKey" />
        <Entry x:Name="setValue" Text="" Placeholder="setValue" />
        <Button Text="Alert Specified Preference" Clicked="GetPreference"/>
        <Entry x:Name="getKey" Text="" Placeholder="Give key, get value..." />
        <Button Text="GetRequest" Clicked="GetRequest"/>
        <Button Text="PostRequest" Clicked="PostRequest"/>
        <Entry x:Name="destination" Text="" Placeholder="Your destination?" />
    </StackLayout>
</ContentPage>
