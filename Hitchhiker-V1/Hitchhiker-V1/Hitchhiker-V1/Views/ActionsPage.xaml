<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hitchhiker_V1.Views.ActionsPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Hitchhiker_V1.ViewModels"  
             xmlns:model="clr-namespace:Hitchhiker_V1.Models"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Name="BrowseItemsPage">

    <StackLayout>
        <Label Text="Choose how long you want to share your location ad destination:" />
        <Button Text="Show me as hitchhiker on map." Clicked="ShowMeClicked"/>
    </StackLayout>
</ContentPage>
